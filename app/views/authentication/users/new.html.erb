<%= form_with model: @user do |form| %>
    <% @user.errors.full_messages.each do |error| %>
        <div>
            <%= error %>
        </div>
    <% end %>

    <div>
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
    </div>

    <div>
        <%= form.label :apellido_paterno %>
        <%= form.text_field :apellido_paterno %>
    </div>

    <div>
        <%= form.label :apellido_materno %>
        <%= form.text_field :apellido_materno %>
    </div>

    <div>
        <%= form.label :user_type_id, 'Tipo de usuario' %>
        <%= form.collection_select :user_type_id,
            UserType.all.order(nombre: :asc),
            :id, :nombre, {include_blank: true, required: true},
            style: "display: block",
            id: 'slim-select',
            data: {controller: 'slim-select'}
        %>
    </div>
    <br>

    <div>
        <%= form.label :email %>
        <%= form.email_field :email, required: true %>
    </div>

    <div>
        <%= form.label :username %>
        <%= form.text_field :username, required: true %>
    </div>

    <div>
        <%= form.label :password %>
        <%= form.password_field :password, required: true %>
    </div>
    <br>

    <%= form.submit %>
    
<% end %>