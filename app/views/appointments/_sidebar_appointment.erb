<%= turbo_frame_tag appointment do %>
    <%-# link_to 'Cerrar SesiÃ³n', session_path(Current.user.id), data:{ turbo_method: :delete }, class: "nav-link"%>
    <%-# link_to medico_path(medico: { appointment_selected: appointment.id }) do %>
    <%= link_to medico_path( appointment_selected: appointment.id, commit: appointment.estado ), 
        class: "nav-link", 'data-turbo-prefetch': "false", 'data-turbo-frame': '_top' do %>
        <div id="card_<%= appointment.id %>" class="card <%=
                appointment.estado == 0 ? 'border-secondary' 
                : appointment.estado == 1 ? 'border-secondary'
                : appointment.estado == 2 ? 'border-success'
                : "" %> mb-3 card-width" >
            <div class="card-header" >Ficha: <%= "#{appointment.clave} #{appointment.consecutivo}" %></div>
            <div
                class="card-body ">
                <div class='row'>
                    <div class='col-md-6'>
                        <h5 class="card-title"><%= appointment.nombre_paciente %></h5>
                    </div>
                    <div class='col-md-6'>
                        <h6 class="card-title text-light text-center rounded <%=
                            appointment.estado == 0 ? 'bg-secondary'
                            : appointment.estado == 1 ? 'bg-primary' 
                            : appointment.estado == 2 ? 'bg-success'
                            : appointment.estado == 3 ? 'bg-info'
                            : appointment.estado == 4 ? 'bg-danger'
                            : "" %>">
                            <%= appointment.estado == 0 ? 'En espera'
                            : appointment.estado == 1 ? 'Atendiendo' 
                            : appointment.estado == 2 ? 'Atendido'
                            : appointment.estado == 3 ? 'Finalizado'
                            : appointment.estado == 4 ? 'Cancelado'
                            : "" %>
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
<% end %>