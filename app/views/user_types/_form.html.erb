<%= form_with(model: user_type) do |form| %>
  <% @user_type.errors.full_messages.each do |error| %>
        <div>
            <%= error %>
        </div>
    <% end %>

  <div>
    <%= form.label :nombre, style: "display: block" %>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :descripcion, style: "display: block" %>
    <%= form.text_area :descripcion %>
  </div>

  <div>
    <%= form.collection_select :permission_ids,
    Permission.all.order(nombre: :asc),
    :id, :nombre, {},
    style: "display: block",
    id: 'slim-select',
    data: {controller: 'slim-select'},
    multiple: true
    %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
